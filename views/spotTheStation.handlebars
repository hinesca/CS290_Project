        <h3 id="weather">Weather: </h3>
        <script>
            weatherSubmit()

            function weatherSubmit() {
                var req = new XMLHttpRequest();
                var reqStr = "http://api.openweathermap.org/data/2.5/weather?q=Corvallis&appid=fa7d80c48643dfadde2cced1b1be6ca1";
                req.open("GET", reqStr, false);
                req.send(null);
                var responseObj = JSON.parse(req.responseText);
                document.getElementById("weather").innerText += " " + responseObj.weather[0].description;
            }
        </script>
